<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Ballast.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Ballast.PopupOverlay"
            app:title="Home"
            app:subtitle="Ballast Examples"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Counter"/>
            <Button
                android:id="@+id/btn_scorekeeper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scorekeeper"/>
            <Button
                android:id="@+id/btn_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync"/>
            <Button
                android:id="@+id/btn_undo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Undo/Redo"/>
            <Button
                android:id="@+id/btn_bgg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="API Call &amp; Cache"/>
            <Button
                android:id="@+id/btn_kitchen_sink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitchen Sink"/>

            <CheckBox
                android:id="@+id/cb_floating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show in dialog"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
