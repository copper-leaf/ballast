<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/examplesListFragment">

    <fragment
        android:id="@+id/examplesListFragment"
        android:name="com.copperleaf.ballast.examples.util.ExamplesListFragment"
        android:label="ExamplesListFragment">
        <action
            android:id="@+id/action_examplesListFragment_to_counterFragment"
            app:destination="@id/counterFragment"/>
        <action
            android:id="@+id/action_examplesListFragment_to_kitchenSinkFragment"
            app:destination="@id/kitchenSinkFragment"/>
        <action
            android:id="@+id/action_examplesListFragment_to_bggFragment"
            app:destination="@id/bggFragment"/>
        <action
            android:id="@+id/action_examplesListFragment_to_scorekeeperFragment"
            app:destination="@id/scorekeeperFragment"/>
    </fragment>

    <fragment
        android:id="@+id/bggFragment"
        android:name="com.copperleaf.ballast.examples.bgg.BggFragment"
        android:label="BggFragment"/>
    <fragment
        android:id="@+id/counterFragment"
        android:name="com.copperleaf.ballast.examples.counter.CounterFragment"
        android:label="CounterFragment"/>
    <fragment
        android:id="@+id/kitchenSinkFragment"
        android:name="com.copperleaf.ballast.examples.kitchensink.KitchenSinkFragment"
        android:label="KitchenSinkFragment"/>
    <fragment
        android:id="@+id/scorekeeperFragment"
        android:name="com.copperleaf.ballast.examples.scorekeeper.ScorekeeperFragment"
        android:label="ScorekeeperFragment"/>

</navigation>
